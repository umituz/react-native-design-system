{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-native",
    "declaration": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@umituz/react-native-design-system": [
        "src/index.ts"
      ],
      "@umituz/react-native-storage": [
        "src/storage/index.ts"
      ],
      "@atoms": [
        "src/atoms/index.ts"
      ],
      "@atoms/*": [
        "src/atoms/*"
      ],
      "@molecules": [
        "src/molecules/index.ts"
      ],
      "@molecules/*": [
        "src/molecules/*"
      ],
      "@organisms": [
        "src/organisms/index.ts"
      ],
      "@organisms/*": [
        "src/organisms/*"
      ],
      "@layouts": [
        "src/layouts/index.ts"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@theme": [
        "src/theme/index.ts"
      ],
      "@theme/*": [
        "src/theme/*"
      ],
      "@typography": [
        "src/typography/index.ts"
      ],
      "@typography/*": [
        "src/typography/*"
      ],
      "@responsive": [
        "src/responsive/index.ts"
      ],
      "@responsive/*": [
        "src/responsive/*"
      ],
      "@device": [
        "src/device/index.ts"
      ],
      "@device/*": [
        "src/device/*"
      ],
      "@safe-area": [
        "src/safe-area/index.ts"
      ],
      "@safe-area/*": [
        "src/safe-area/*"
      ],
      "@exception": [
        "src/exception/index.ts"
      ],
      "@exception/*": [
        "src/exception/*"
      ],
      "@infinite-scroll": [
        "src/infinite-scroll/index.ts"
      ],
      "@infinite-scroll/*": [
        "src/infinite-scroll/*"
      ],
      "@uuid": [
        "src/uuid/index.ts"
      ],
      "@uuid/*": [
        "src/uuid/*"
      ],
      "@image": [
        "src/image/index.ts"
      ],
      "@image/*": [
        "src/image/*"
      ],
      "@timezone": [
        "src/timezone/index.ts"
      ],
      "@timezone/*": [
        "src/timezone/*"
      ],
      "@offline": [
        "src/offline/index.ts"
      ],
      "@offline/*": [
        "src/offline/*"
      ],
      "@storage": [
        "src/storage/index.ts"
      ],
      "@storage/*": [
        "src/storage/*"
      ],
      "@umituz/react-native-filesystem": [
        "src/filesystem/index.ts"
      ],
      "@filesystem": [
        "src/filesystem/index.ts"
      ],
      "@filesystem/*": [
        "src/filesystem/*"
      ],
      "@umituz/react-native-media": [
        "src/media/index.ts"
      ],
      "@media": [
        "src/media/index.ts"
      ],
      "@media/*": [
        "src/media/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "node_modules/**",
    "node_modules/**/*",
    "**/node_modules",
    "**/node_modules/**",
    "**/node_modules/**/*",
    "./node_modules/**",
    "lib",
    "dist",
    "build",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.example.tsx",
    "src/__tests__",
    "**/__tests__/**"
  ]
}