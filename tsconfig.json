{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-native",
    "declaration": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "node_modules/**",
    "node_modules/**/*",
    "**/node_modules",
    "**/node_modules/**",
    "**/node_modules/**/*",
    "./node_modules/**",
    "lib",
    "dist",
    "build",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.example.tsx",
    "src/__tests__",
    "**/__tests__/**"
  ]
}